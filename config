# Peril Game Display Configuration
# Edit the values below to adjust your display positions
# Use the Position Reset Tool to generate new values if needed

# Scoreboard display position and rotation
scoreboard_offset=<0.000, 3.000, 0.000>
scoreboard_rotation=<0.000, 0.000, 0.000, 1.000>

# Leaderboard display position and rotation  
leaderboard_offset=<-3.000, 0.000, 1.500>
leaderboard_rotation=<0.000, 0.000, 0.000, 1.000>

# Dice display position and rotation
dice_offset=<3.000, 0.000, 0.000>  
dice_rotation=<0.000, 0.000, 0.000, 1.000>

# Channel settings - DYNAMIC (auto-calculated per game instance)
# These will be calculated dynamically based on owner+object keys
# to prevent conflicts between multiple game tables
scoreboard_channel=DYNAMIC
leaderboard_channel=DYNAMIC
dice_channel=DYNAMIC

# Game data channels - DYNAMIC (auto-calculated per game instance) 
# These match the main game's dynamic channel system
scoreboard_data_channel=DYNAMIC_SCOREBOARD
leaderboard_data_channel=DYNAMIC_LEADERBOARD
dice_data_channel=DYNAMIC_DICE
